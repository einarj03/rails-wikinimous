<%= render 'navbar' %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1 class="title">
        <%= @article.title %>
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path(@article) %>
        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
      </h1>
      <hr>

      <p><%= @article.content %></p>
    </div>
  </div>
</div>
